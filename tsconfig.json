{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs", // move to EcmaScript Modules (ESM)
        "outDir": "dist/js",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
